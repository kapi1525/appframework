{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "windows": {
                "command": "cls && ninja -C bin"
            },
            "linux": {
                "command": "clear && ninja -C bin"
            },
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "rebuild",
            "type": "shell",
            "windows": {
                "command": "cls && meson bin && ninja -C bin"
            },
            "linux": {
                "command": "clear && rm bin -r -f && meson bin && ninja -C bin"
            },
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "release build",
            "type": "shell",
            "windows": {
                "command": "cls && meson --buildtype release bin && ninja -C bin"
            },
            "linux": {
                "command": "clear && rm bin -r -f && meson --buildtype release bin && ninja -C bin"
            },
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "windows cross build",
            "type": "shell",
            "windows": {
                "command": "cls && meson --buildtype release bin && ninja -C bin"
            },
            "linux": {
                "command": "clear && rm bin -r -f && /home/kacper/msvc-wine/vs/bin/x86/msvcenv.sh && WINEDEBUG=-all meson --cross-file ./cross_linux_to_windows.ini --buildtype release bin && ninja -C bin"
            },
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}